// 将设置放入此文件中以覆盖默认设置
{
    "r.alwaysUseActiveTerminal": true,
    "r.bracketedPaste": true,
    "r.rterm.option": [
        // "--no-save",
        // "--no-restore",
        // "--no-site-file"
    ],
    "r.rpath.mac": "/usr/local/bin/R",
    "path-autocomplete.pathMappings": {
        "/": "/",
        "./": "${folder}"
    },
    "r.sessionWatcher": true,
    // "r.rterm.mac": "/usr/local/bin/R",
    "r.rterm.mac": "/opt/homebrew/bin/radian",
    "git.autofetch": true,
    "git.confirmSync": false,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "r.lsp.diagnostics": false,
    "r.lsp.args": [],
    "remote.SSH.remotePlatform": {
        "10.8.11.57": "linux"
    },
    "remote.SSH.useFlock": false,
    "update.mode": "manual",
    "redhat.telemetry.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    "git.suggestSmartCommit": false,
    "diffEditor.renderSideBySide": false,
    "workbench.editor.enablePreview": false,
    "editor.formatOnSave": true,
    "editor.unicodeHighlight.allowedLocales": {
        "zh-hans": true
    },
    "editor.unicodeHighlight.allowedCharacters": {
        "：": true
    },
    "rust-analyzer.cargo.sysroot": "discover",
    "editor.inlineSuggest.enabled": true,
    "workbench.colorTheme": "Default Light Modern",
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.enablePersistentSessions": false,
    "ruff.showNotifications": "onError",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "editor.formatOnPaste": true,
    "files.autoSave": "onFocusChange",
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "python.defaultInterpreterPath": "/opt/homebrew/bin/python3.11",
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.analysis.completeFunctionParens": true,
    "python.terminal.launchArgs": [
        "-m",
        "IPython"
    ],
    "github.copilot.enable": {
        "python": "true",
        "R": "true"
    },
    "notebook.output.scrolling": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "isort.args": [
        "--profile",
        "black"
    ],
    "python.terminal.activateEnvInCurrentTerminal": true,
    "mypy.runUsingActiveInterpreter": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    // "http.proxy": "http://127.0.0.1:8001",
    "evenBetterToml.formatter.trailingNewline": true,
    "jupyter.askForKernelRestart": false,
    "jupyter.widgetScriptSources": [
        "jsdelivr.com",
        "unpkg.com"
    ],
    "github.copilot.editor.enableAutoCompletions": true,
    "python.analysis.typeCheckingMode": "strict",
    "python.analysis.diagnosticMode": "workspace",
    "dataWrangler.experiments.autoDetectCsvDelimiter": true,
    "dataWrangler.experiments.fastCsvParsing": true,
    "python.analysis.autoFormatStrings": true,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.diagnosticSeverityOverrides": {
        "reportUnknownMemberType": "none",
        "reportUnknownVariableType": "none",
        "reportUnknownParameterType": "none",
        "reportUnknownLambdaType": "none",
        "reportUnknownArgumentType": "none",
        "reportUnknownCallerType": "none",
        "reportUnnecessaryIsInstance": "none",
    },
    "explorer.fileNesting.patterns": {
        "Cargo.toml": "Cargo.lock",
        "*.sqlite": "${capture}.${extname}-*",
        "*.db": "${capture}.${extname}-*",
        "*.sqlite3": "${capture}.${extname}-*",
        "*.db3": "${capture}.${extname}-*",
        "*.sdb": "${capture}.${extname}-*",
        "*.s3db": "${capture}.${extname}-*"
    },
}
